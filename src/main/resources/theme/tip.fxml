<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<Pane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.faforever.client.tip.TipController" fx:id="root"
      maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
      prefWidth="600.0" xmlns="http://javafx.com/javafx/8">
    <children>
        <VBox prefHeight="400.0" prefWidth="600.0">
            <children>
                <Label fx:id="title" text="Title" VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets bottom="10.0" top="10.0"/>
                    </VBox.margin>
                </Label>
                <HBox VBox.vgrow="ALWAYS">
                    <children>
                        <Pane HBox.hgrow="ALWAYS">
                            <children>
                                <Label fx:id="text" text="Text"/>
                            </children>
                        </Pane>
                        <ImageView fx:id="image" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true"
                                   preserveRatio="true" HBox.hgrow="NEVER">
                            <HBox.margin>
                                <Insets left="10.0"/>
                            </HBox.margin>
                        </ImageView>
                    </children>
                </HBox>
                <HBox alignment="TOP_RIGHT">
                    <children>
                        <Button mnemonicParsing="false" text="%tip.previous" onMouseClicked="#onPreviousClicked">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </HBox.margin>
                        </Button>
                        <Button cancelButton="true" defaultButton="true" mnemonicParsing="false" text="%tip.close"
                                onMouseClicked="#onCloseClicked">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" text="%tip.next" onMouseClicked="#loadNext">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </HBox.margin>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" top="10.0"/>
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
</Pane>
