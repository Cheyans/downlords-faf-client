<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="root" minHeight="400.0" minWidth="600.0"
      xmlns="http://javafx.com/javafx/8.0.112" fx:controller="com.faforever.client.tip.TipController">
    <children>
        <Label fx:id="title" styleClass="h1" text="%tip.loading" wrapText="true" VBox.vgrow="ALWAYS">
            <VBox.margin>
                <Insets bottom="10.0" top="10.0"/>
            </VBox.margin>
        </Label>
        <HBox VBox.vgrow="ALWAYS">
            <children>
                <HBox HBox.hgrow="ALWAYS">
                    <children>
                        <Label fx:id="text" styleClass="tip-text" wrapText="true" maxWidth="500"/>
                    </children>
                </HBox>
                <ImageView fx:id="image" fitHeight="300" fitWidth="400" pickOnBounds="true" preserveRatio="true"
                           HBox.hgrow="NEVER">
                    <HBox.margin>
                        <Insets left="10.0"/>
                    </HBox.margin>
                </ImageView>
            </children>
        </HBox>
        <CheckBox fx:id="showAtStartUp" alignment="CENTER_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false"
                  text="&lt;Show tips at startup&gt;" wrapText="true">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
        </CheckBox>
        <HBox alignment="TOP_RIGHT">
            <children>
                <Button mnemonicParsing="false" onMouseClicked="#onPreviousClicked" text="%tip.previous">
                    <HBox.margin>
                        <Insets left="10.0" right="10.0"/>
                    </HBox.margin>
                </Button>
                <Button cancelButton="true" defaultButton="true" mnemonicParsing="false"
                        onMouseClicked="#onCloseClicked" text="%tip.close">
                    <HBox.margin>
                        <Insets left="10.0" right="10.0"/>
                    </HBox.margin>
                </Button>
                <Button mnemonicParsing="false" onMouseClicked="#loadNext" text="%tip.next">
                    <HBox.margin>
                        <Insets left="10.0" right="10.0"/>
                    </HBox.margin>
                </Button>
            </children>
            <VBox.margin>
                <Insets bottom="10.0" top="10.0"/>
            </VBox.margin>
        </HBox>
    </children>
</VBox>
